<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/sensorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/appName"
        android:layout_centerVertical="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/sensor" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/title_simulation"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appName"
        android:prompt="@string/chooseOptionSpinner"
        android:entries="@array/patientStatus" />

    <Button
        android:id="@+id/beginSimulationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusSpinner"
        android:layout_centerInParent="true"
        android:text="@string/begin_simulation"
        android:textSize="20sp"
        android:onClick="beginSimulation"/>

</RelativeLayout>